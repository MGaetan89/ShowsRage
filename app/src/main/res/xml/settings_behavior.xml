<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

	<CheckBoxPreference
		android:defaultValue="false"
		android:key="view_in_external_video_player"
		android:title="@string/view_in_external_video_player" />

	<ListPreference
		android:defaultValue="21600000"
		android:entries="@array/version_check_keys"
		android:entryValues="@array/version_check_values"
		android:key="behavior_version_check"
		android:title="@string/version_check" />

	<ListPreference
		android:defaultValue="0"
		android:entries="@array/logs_auto_update_keys"
		android:entryValues="@array/logs_auto_update_values"
		android:key="behavior_logs_auto_update"
		android:title="@string/logs_auto_update" />

	<Preference
		android:key="behavior_clear_local"
		android:title="@string/clear_local_data" />
</PreferenceScreen>
