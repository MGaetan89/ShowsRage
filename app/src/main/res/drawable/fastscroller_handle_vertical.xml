<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape>
			<solid android:color="@android:color/transparent" />
			<size
				android:width="@dimen/fastscroller_track_clickable_width"
				android:height="@dimen/fastscroller_track_height" />
		</shape>
	</item>
	<item
		android:left="@dimen/fastscroller_track_offset"
		android:right="@dimen/fastscroller_track_offset">
		<shape android:shape="rectangle">
			<corners android:radius="@dimen/fastscroller_track_corner" />
			<solid android:color="@color/accent" />
			<size
				android:width="@dimen/fastscroller_track_width"
				android:height="@dimen/fastscroller_track_height" />
		</shape>
	</item>
</layer-list>
