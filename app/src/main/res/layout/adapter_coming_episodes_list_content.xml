<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="comingEpisode"
			type="com.mgaetan89.showsrage.presenter.ComingEpisodePresenter"/>
	</data>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/list_item_height"
		android:background="?selectableItemBackground"
		android:clickable="true"
		android:paddingEnd="@dimen/padding"
		android:paddingLeft="@dimen/padding"
		android:paddingRight="@dimen/padding"
		android:paddingStart="@dimen/padding"
		tools:showIn="@layout/adapter_coming_episodes_list">

		<ImageView
			android:id="@+id/episode_logo"
			android:layout_width="40dp"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginEnd="@dimen/padding"
			android:layout_marginRight="@dimen/padding"
			android:contentDescription="@{comingEpisode.showName}"
			app:image="@{comingEpisode.posterUrl}"
			tools:src="@mipmap/ic_launcher"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toEndOf="@+id/episode_logo"
			android:layout_toLeftOf="@+id/episode_actions"
			android:layout_toRightOf="@+id/episode_logo"
			android:layout_toStartOf="@+id/episode_actions"
			android:orientation="vertical">

			<TextView
				style="@style/TextAppearance.AppCompat.Subhead"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:ellipsize="end"
				android:singleLine="true"
				android:text="@{@string/season_episode_name(comingEpisode.season, comingEpisode.episode, comingEpisode.episodeName)}"
				tools:text="@string/episode_name"/>

			<TextView
				style="@style/TextAppearance.AppCompat.Caption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@{comingEpisode.airDate}"
				tools:text="2011-09-19"/>

			<TextView
				style="@style/TextAppearance.AppCompat.Caption"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="end|right"
				android:text="@{comingEpisode.networkAndQuality}"
				tools:text="CBS / HD1080p"/>
		</LinearLayout>

		<ImageView
			android:id="@+id/episode_actions"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_marginLeft="@dimen/padding"
			android:layout_marginStart="@dimen/padding"
			android:contentDescription="@string/actions"
			android:src="@drawable/ic_more_vert_white_24dp"/>
	</RelativeLayout>
</layout>
