<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context="com.mgaetan89.showsrage.fragment.ShowOverviewFragment">

	<data>

		<variable
			name="show"
			type="com.mgaetan89.showsrage.presenter.ShowPresenter"/>
	</data>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/padding">

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<ImageView
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:adjustViewBounds="true"
						android:contentDescription="@{show.name}"
						app:circle="@{show.circlePoster}"
						app:image="@{show.posterUrl}"
						app:paletteListener="@{show.paletteListener}"
						tools:src="@mipmap/ic_launcher"/>

					<LinearLayout
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_margin="@dimen/padding"
						android:layout_weight="2"
						android:orientation="vertical">

						<TextView
							style="@style/TextAppearance.AppCompat.Subhead.Inverse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/padding_half"
							android:ellipsize="end"
							android:singleLine="true"
							android:text="@{show.name}"
							android:visibility="@{show.nameVisibility}"
							tools:text="2 Broke Girls"
							tools:visibility="visible"/>

						<TextView
							style="@style/TextAppearance.AppCompat.Inverse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/padding_half"
							android:text="@{@string/airs(show.airDate)}"
							android:visibility="@{show.airDateVisibility}"
							tools:text="@string/airs"
							tools:visibility="visible"/>

						<TextView
							style="@style/TextAppearance.AppCompat.Inverse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/padding_half"
							android:text="@{@string/network(show.network)}"
							android:visibility="@{show.networkVisibility}"
							tools:text="@string/network"
							tools:visibility="visible"/>

						<TextView
							style="@style/TextAppearance.AppCompat.Inverse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="@dimen/padding_half"
							android:text="@{@string/next_episode(show.nextEpisodeDate)}"
							android:visibility="@{show.nextEpisodeDateVisibility}"
							tools:text="@string/next_episode"
							tools:visibility="visible"/>

						<TextView
							style="@style/TextAppearance.AppCompat.Inverse"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@{@string/status_value(show.status)}"
							android:visibility="@{show.statusVisibility}"
							tools:text="@string/status_value"
							tools:visibility="visible"/>
					</LinearLayout>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/show_plot_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding"
				android:visibility="gone"
				tools:visibility="visible">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Subhead.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@string/plot"/>

					<TextView
						android:id="@+id/show_plot"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut imperdiet nisi et arcu gravida dictum. Vestibulum vitae odio quis augue porta tincidunt eu pulvinar odio."/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/show_casting_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding"
				android:visibility="gone"
				tools:visibility="visible">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Subhead.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@string/casting"/>

					<TextView
						android:id="@+id/show_casting_directors"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/directors"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_casting_writers"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/writers"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_casting_actors"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:visibility="gone"
						tools:text="@string/actors"
						tools:visibility="visible"/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:id="@+id/show_awards_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding"
				android:visibility="gone"
				tools:visibility="visible">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Subhead.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@string/awards"/>

					<TextView
						android:id="@+id/show_awards"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut imperdiet nisi et arcu gravida dictum. Vestibulum vitae odio quis augue porta tincidunt eu pulvinar odio."/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Subhead.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@string/more_information"/>

					<TextView
						android:id="@+id/show_language_country"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/language_county"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_year"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/year"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_rated"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/rated"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_runtime"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/runtime"
						tools:visibility="visible"/>

					<TextView
						android:id="@+id/show_rating"
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:visibility="gone"
						tools:text="@string/rating"
						tools:visibility="visible"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@{@string/location(show.location)}"
						android:visibility="@{show.locationVisibility}"
						tools:text="@string/location"
						tools:visibility="visible"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@{show.quality}"
						android:visibility="@{show.qualityVisibility}"
						tools:text="@string/quality"
						tools:visibility="visible"/>

					<TextView
						style="@style/TextAppearance.AppCompat.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@{@string/genre(show.genre)}"
						android:visibility="@{show.genreVisibility}"
						tools:text="@string/genre"
						tools:visibility="visible"/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/padding"
					android:orientation="vertical">

					<TextView
						style="@style/TextAppearance.AppCompat.Subhead.Inverse"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/padding_half"
						android:text="@string/external_links"/>

					<Button
						android:id="@+id/show_imdb"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:onClick="@{show.openImdb}"
						android:text="@string/imdb"
						android:visibility="@{show.imdbVisibility}"
						tools:visibility="visible"/>

					<Button
						android:id="@+id/show_the_tvdb"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:onClick="@{show.openTheTvdb}"
						android:text="@string/the_tvdb"/>

					<Button
						android:id="@+id/show_tvrage"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:onClick="@{show.openTvrage}"
						android:text="@string/tvrage"/>
				</LinearLayout>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="@dimen/padding">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:contentDescription="@{show.name}"
					app:circle="@{show.circleBanner}"
					app:image="@{show.bannerUrl}"
					tools:src="@mipmap/ic_launcher"/>
			</android.support.v7.widget.CardView>

			<android.support.v7.widget.CardView
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:adjustViewBounds="true"
					android:contentDescription="@{show.name}"
					app:circle="@{show.circleFanArt}"
					app:image="@{show.fanArtUrl}"
					tools:src="@mipmap/ic_launcher"/>
			</android.support.v7.widget.CardView>
		</LinearLayout>
	</ScrollView>
</layout>
